#!/bin/sh

# set -x

content=$1
flag="--"
option=${content#*$flag}

if [ ${#option} -gt 0 ] && [ "$option" != "$content" ]; then
	query_len=$((${#content} - ${#option} - ${#flag}))
    query=${content:0:query_len}
	rg --column -n --no-heading --color=always -S -uu $option -- $query
else
	rg --column -n --no-heading --color=always -S -uu -- $content
fi
