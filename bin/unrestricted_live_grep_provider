#!/bin/sh

# set -x

fzfx_trim() {
    var="$*"
    # remove leading whitespace characters
    var="${var#"${var%%[![:space:]]*}"}"
    # remove trailing whitespace characters
    var="${var%"${var##*[![:space:]]}"}"
    printf '%s' "$var"
}

fzfx_dump_cache() {
    local cache_dir=$(dirname "$_FZFX_RESUME_LIVE_GREP_CACHE")
    if [ ! -d $cache_dir ]; then
        mkdir -p "$cache_dir"
    fi
    # echo "_FZFX_RESUME_LIVE_GREP_CACHE:[$_FZFX_RESUME_LIVE_GREP_CACHE]"
    echo "$*" > "$_FZFX_RESUME_LIVE_GREP_CACHE"
}

content="$1"
fzfx_dump_cache "$content"

flag="--"
option=${content#*$flag}

if [ ${#option} -gt 0 ] && [ "$option" != "$content" ]; then
    query_len=$((${#content} - ${#option} - ${#flag}))
    query=$(fzfx_trim "${content:0:query_len}")
    if [ $_FZFX_ENABLE_DEBUG -gt 0 ]; then
        echo "DEBUG-\$grep:[$_FZFX_UNRESTRICTED_GREP_COMMAND],\$opt:[$option],\$q:[$query]"
    fi
    eval "$_FZFX_UNRESTRICTED_GREP_COMMAND $option -- \"$query\""
else
    content=$(fzfx_trim "$content")
    if [ $_FZFX_ENABLE_DEBUG -gt 0 ]; then
        echo "DEBUG-\$grep:[$_FZFX_UNRESTRICTED_GREP_COMMAND],\$q:[$content]"
    fi
    eval "$_FZFX_UNRESTRICTED_GREP_COMMAND -- \"$content\""
fi
