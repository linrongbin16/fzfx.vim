#!/bin/sh

# set -x

fzfx_trim() {
    var="$*"
    # remove leading whitespace characters
    var="${var#"${var%%[![:space:]]*}"}"
    # remove trailing whitespace characters
    var="${var%"${var##*[![:space:]]}"}"
    printf '%s' "$var"
}

content=$1
content=$(fzfx_trim $content)
arrow="->"

if [ "${content:0:1}" = "*" ]; then
    content=${content:1}
fi

raw=${content#*$arrow}
if [ ${#raw} -gt 0 ] && [ "$raw" != "$content" ]; then
    raw=$(fzfx_trim $raw)
    # echo "raw:[$raw], content:[$content]"
    git log --graph --pretty=oneline --abbrev-commit --date=short --color --pretty="format:%C(auto)%cd %h%d %s" $raw
else
    # echo "content:[$content]"
    git log --graph --pretty=oneline --abbrev-commit --date=short --color --pretty="format:%C(auto)%cd %h%d %s" $content
fi
