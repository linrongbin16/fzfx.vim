#!/bin/sh

set -e

BASE_DIR="$1"
BIN_DIR="$BASE_DIR/bin"
VENV_DIR="$BIN_DIR/venv"

if [ ! -d "$VENV_DIR" ]; then
	rm -rf "$VENV_DIR"
fi

if type python3 >/dev/null 2>&1; then
	PY=python3
else
	PY=python
fi
$PY -m venv "$VENV_DIR"

. "$VENV_DIR/bin/activate"

$PY -m pip install requests beautifulsoup4 lxml
deactivate
